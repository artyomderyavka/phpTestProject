upstream web_nodes {
    server docker_web-node-1_1:80      weight=1;
    server docker_web-node-2_1:80      weight=1;
    server docker_web-node-3_1:80      weight=1;
}
upstream admin_nodes {
    server docker_web-node-admin_1:80  weight=1;
}
server {
    listen       80;
    server_name  localhost;

    #charset koi8-r;
